<?xml version="1.0" encoding="UTF-8"?>


<!-- OFF – Silent. No internal messages.

ERROR – Only serious internal problems (default if omitted).

WARN – Errors + warnings (your current setting).

INFO – Adds general info about plugin discovery, appender setup, etc.

DEBUG – Lots of details (good for “why isn’t my appender attaching?”).

TRACE – Max verbosity (shows parsing, plugin resolution, filters, etc.).
 -->
<Configuration status="WARN">
    <Appenders>
        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- File output -->
        <File name="FileLogger" fileName="logs/app.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>